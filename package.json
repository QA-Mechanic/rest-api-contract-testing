{
  "name": "restful-api-contract-testing",
  "version": "1.0.0",
  "scripts": {
    "test:consumer": "mocha tests/consumer/*.test.js --timeout 10000",
    "test:provider": "mocha tests/provider/*.verification.js --timeout 30000",
    "publish:contracts": "node scripts/publish-contracts-working.js",
    "test:contract:full": "npm run test:consumer && npm run publish:contracts && npm run test:provider",
    "test:contract:consumer-only": "npm run test:consumer && npm run publish:contracts",
    "clean:pacts": "rm -rf pacts/*.json",
    "clean:logs": "rm -rf logs/*.log"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^15.0.1",
    "axios": "^1.11.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "dotenv": "^16.3.1",
    "expect": "^30.0.5",
    "mocha": "^10.8.2"
  }
}
